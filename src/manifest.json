{
	"manifest_version": 2,
	"name": "BingToGoogle",
	"short_name": "B2G",
	"version": "1.0",
	"description": "A Chrome extension to redirect all Bing searches to Google.",
	"permissions": [
		"webRequest",
		"storage",
		"webRequestBlocking",
		"https://www.bing.com/"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "BingToGoogle",
		"default_icon": {
			"16": "images/logo/logo16.png",
			"32": "images/logo/logo32.png",
			"48": "images/logo/logo48.png",
			"128": "images/logo/logo128.png"
		}
	},
	"icons": {
		"16": "images/logo/logo16.png",
		"32": "images/logo/logo32.png",
		"48": "images/logo/logo48.png",
		"128": "images/logo/logo128.png"
	},
	"options_page": "options.html"
}